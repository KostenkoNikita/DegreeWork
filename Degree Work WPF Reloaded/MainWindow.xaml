<Window x:Class="Degree_Work.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/Expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Degree_Work"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" MinHeight="600" MinWidth="900" ScrollViewer.VerticalScrollBarVisibility="Disabled" WindowStyle="None" BorderThickness="2" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Margin ="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Margin ="0,0,0,0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.15*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Меню" Grid.Row="0" Margin="1,1,1,1" TextAlignment="Center" VerticalAlignment="Center"  FontSize="60"/>

            <Viewbox x:Name="halfplaneContainer" Margin="1,10,1,10" Grid.Row="1">
                <Image x:Name ="halfplaneImage"  Source="Resources\menuPicHalfPlane.png" MouseEnter="Icon_MouseEnter" MouseLeave="Icon_MouseLeave" MouseDown="Icon_MouseDown"/>
            </Viewbox>
            <Viewbox x:Name="zoneContainer" Margin="1,10,1,10" Grid.Row="2">
                <Image x:Name ="zoneImage"  Source="Resources\menuPicZone.png" MouseEnter="Icon_MouseEnter" MouseLeave="Icon_MouseLeave" MouseDown="Icon_MouseDown"/>
            </Viewbox>
            <Viewbox x:Name="circleContainer" Margin="1,10,1,10" Grid.Row="3">
                <Image x:Name ="circleImage"  Source="Resources\menuPicCircle.png" MouseEnter="Icon_MouseEnter" MouseLeave="Icon_MouseLeave" MouseDown="Icon_MouseDown"/>
            </Viewbox>
            <Viewbox x:Name="exitContainer" Margin="6,6,6,6" Grid.Row="4">
                <Image x:Name ="exitImage"  Source="Resources\exitIco.bmp" MouseEnter="Icon_MouseEnter" MouseLeave="Icon_MouseLeave" MouseDown="Icon_MouseDown"/>
            </Viewbox>





            <Border Grid.Row="0" BorderThickness="1" BorderBrush="Black"/>
            <Border Grid.Row="1" Grid.RowSpan="3" BorderThickness="1" BorderBrush="Black"/>
            <Border Grid.Row="4" BorderThickness="1" BorderBrush="Black"/>

        </Grid>
        <Grid Grid.Column="1" Margin="50,40,50,15" Height="Auto" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Viewbox x:Name="MenuItemImageContainer" Margin="1,1,1,1" Grid.Row="0">
                <Image x:Name ="MenuItemImage" Source="Resources\Empty.png"/>
            </Viewbox>
            <TextBlock x:Name="MenuItemImageDescription" Grid.Column="0" Grid.Row="3" Text="" Margin="0,42,0,0" TextAlignment="Center"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontFamily="Times New Roman" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
